<!DOCTYPE html>
<html lang="en">
  <%- include('partial/head') %>

  <body>
    <%- include('partial/navbar') %>
    <div class="container-fluid">
      <h1 class="text-center">Edit Entry</h1>
      <div class="">
        <form action="/api/users/<%= item.uuid %>" method="POST">
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="email"
            value="<%= item.email %> "
            placeholder="Masukkan Email"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="password"
            value="<%= item.password %> "
            placeholder="Masukkan Password"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="name"
            value="<%= item.name %> "
            placeholder="Masukkan Nama"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="hobby"
            value="<%= item.hobby %> "
            placeholder="Masukkan Hobby"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="age"
            value="<%= item.age %> "
            placeholder="Masukkan Umur"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="win"
            value="<%= item.win %> "
            placeholder="WIN"
          />
          <input
            class="form-control w-100 mt-2"
            type="text"
            name="lose"
            value="<%= item.lose %> "
            placeholder="LOSE"
          />
          <div class="text-center mt-2">
            <button class="btn btn-warning btn-lg">Edit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
